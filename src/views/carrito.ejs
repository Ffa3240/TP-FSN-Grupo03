<!DOCTYPE html>
<html lang="en">
  <%-include("partials/head")%>
  <link rel="stylesheet" href="/css/pages/carrito.css">
  <body>
  <%-include("partials/header")%>
    <main>
      <section>
        <h1>CARRITO DE COMPRAS</h1>
        <div class="categoriasCarrito">
          <h4>DETALLE DEL PRODUCTO</h4>
          <h4>CANTIDAD</h4>
          <h4>TOTAL</h4>
        </div>
        <div class="carritoItem1">
          <div class="dataCarritoItem">
            <picture
              ><img
                src="../img/star-wars/baby-yoda-1.webp"
                alt="ProductoBabyYoda"
                height="118px"
            /></picture>
            <div>
              <h3><%= productos[0].product_name %></h3>
              <h6><%= productos[0].licence_name.toUpperCase() %></h6>
              <br />
              <p>precio: $<%= productos[0].product_price %></p>
            </div>
          </div>
          <div class="selectorCantidad">
            <input type="number" value="2" />
            <div class="botonesCantidad">
              <button class="btnMore">+</button>
              <button class="btnLess">-</button>
            </div>
          </div>
          <div class="total">
            <p>$<%= productos[0].product_price * 2%></p>
            <button class="iconoEliminar">
              <img
                src="../img/icons/delete_trash.svg"
                alt="Eliminar"
                width="28px"
                height="28px"
              />
            </button>
          </div>
        </div>
        <div class="carritoItem1">
          <div class="dataCarritoItem">
            <picture
              ><img
                src="../img/pokemon/pidgeotto-1.webp"
                alt="ProductoPidgeotto"
                height="118px"
            /></picture>
            <div>
              <h3><%= productos[6].product_name %></h3>
              <h6><%= productos[6].licence_name.toUpperCase() %></h6>
              <br />
              <p>precio: $<%= productos[6].product_price %></p>
            </div>
          </div>
          <div class="selectorCantidad">
            <input type="number" value="1" />
            <div class="botonesCantidad">
              <button class="btnMore">+</button>
              <button class="btnLess">-</button>
            </div>
          </div>
          <div class="total">
            <p>$<%= productos[6].product_price %></p>
            <button class="iconoEliminar">
              <img
                src="../img/icons/delete_trash.svg"
                alt="Eliminar"
                width="28px"
                height="28px"
              />
            </button>
          </div>
        </div>
      </section>
      <section>
        <div class="resumen">
          <span><h2>RESUMEN</h2></span>
          <div class="resumenTabla">
            <div class="displayResultados">
              <p>CANTIDAD DE ELEMENTOS</p>
              <p class="resultado">3</p>
            </div>
            <br />
            <div class="displayResultados">
              <p>SUBTOTAL</p>
              <p class="resultado"><%= productos[0].product_price * 2 + productos[6].product_price%></p>
            </div>
            <br />
            <div class="displayResultados lineaTotal">
              <p>ENV√çO</p>
              <p class="resultado">$ 0,00</p>
            </div>
            <br />
            <div class="displayResultados">
              <p>TOTAL</p>
              <p class="resultado"><%= productos[0].product_price * 2 + productos[6].product_price%></p>
            </div>
          </div>
          <button class="botonPagar">IR A PAGAR</button>
        </div>
      </section>
    </main>
      <%-include("partials/footer")%>
    <script src="../js/carrito/mainCarrito.js"></script>
  </body>
</html>
